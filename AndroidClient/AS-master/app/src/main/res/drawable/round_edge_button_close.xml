<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dp" android:color="#0b0b0b" />
            <gradient android:angle="-90" android:startColor="#da242a" android:endColor="#c72228"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dp" android:color="#030303" />
            <solid android:color="#b3171c"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dp" android:color="#050505" />
            <gradient android:angle="-90" android:startColor="#e24c56" android:endColor="#e20e23" />
        </shape>
    </item>
</selector>