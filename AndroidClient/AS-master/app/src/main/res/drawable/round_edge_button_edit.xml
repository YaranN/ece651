<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dp" android:color="#151514" />
            <gradient android:angle="-90" android:startColor="#dde645" android:endColor="#dedb2c"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dp" android:color="#101010" />
            <solid android:color="#e8f56c"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dp" android:color="#0a0a0a" />
            <gradient android:angle="-90" android:startColor="#f1ec6b" android:endColor="#faf036" />
        </shape>
    </item>
</selector>