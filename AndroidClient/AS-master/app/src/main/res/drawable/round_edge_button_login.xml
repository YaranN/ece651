<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0a0a0a" />
            <gradient android:angle="-90" android:startColor="#a9df59" android:endColor="#73a44a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#050505" />
            <solid android:color="#9edeac"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="0.5dp" android:color="#050505" />
            <gradient android:angle="-90" android:startColor="#d2f787" android:endColor="#7a9f3a" />
        </shape>
    </item>
</selector>