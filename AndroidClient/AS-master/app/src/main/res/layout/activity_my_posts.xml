<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post.ui.MyPostsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_my_posts"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/actionbar"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="My Posts" />

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_my_posts"
        android:id="@+id/tab_layout"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/red"
        android:background="@drawable/round_edge_button"
        app:tabSelectedTextColor="@color/tab_selected"
        app:tabTextColor="@color/tab_unselected"
        ></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/tab_layout"
        android:id="@+id/view_pager_my_posts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</RelativeLayout>