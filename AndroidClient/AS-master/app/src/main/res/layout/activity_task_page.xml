<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post.ui.PostsListingActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_post_listing"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="Post" />
    <FrameLayout
        android:layout_below="@+id/toolbar_post_listing"
        android:id="@+id/posts_listing_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        />

    <ImageButton
        android:id="@+id/bt_add_new_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_avg"
        android:src="@drawable/add_button"
        android:background="@color/fui_transparent"/>
</RelativeLayout>