<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post.ui.EditPostFragment">

    <LinearLayout
        android:id="@+id/edit_titleLine"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_post_course"
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:gravity="center"
            android:text="ECE650"
            android:hint="Course"
            android:inputType="textPersonName"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edit_post_topic"
            android:hint="Subtitle here"
            android:gravity="center_vertical"
            android:text="Algorithm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:textStyle="bold"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_post_subtitle"
        android:hint="Subtitle here"
        android:text="problem with python version"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="@dimen/margin_avg"
        android:layout_below="@+id/edit_titleLine"
        android:inputType="textPersonName"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit_post_detail"
        android:hint="Detail about your post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edit_post_subtitle"
        android:layout_above="@+id/post_confirm"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:paddingHorizontal="@dimen/margin_avg"
        android:text="Confused about the version we use"
        />

    <Button
        android:id="@+id/edit_post_confirm"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="Confirm"
        android:layout_gravity="bottom"
        android:background="@drawable/round_edge_button_edit"
        android:layout_margin="@dimen/space_min"/>

</RelativeLayout>