<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingEnd="@dimen/padding_small"
    android:paddingStart="@dimen/padding_small">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/text_user_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/text_notification_count"
            android:layout_toStartOf="@+id/text_notification_count"
            android:paddingRight="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/user_name"
            android:textStyle="bold"
            android:text="Harry Porter"
            android:paddingEnd="@dimen/padding_small"
            />
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/text_notification_count"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="@drawable/circle_accent_notification"
            android:text="5"
            android:gravity="center"
            android:layout_centerInParent="true"

            ></TextView>

    </RelativeLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_small"
        >
    </android.support.v4.widget.Space>

    <TextView
        android:id="@+id/text_last_message"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:ellipsize="end"
        android:maxLines="1"
        ></TextView>
</LinearLayout>